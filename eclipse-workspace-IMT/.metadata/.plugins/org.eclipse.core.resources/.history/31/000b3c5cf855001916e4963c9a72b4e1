int main(void){

	TCNT0=137;
	TIMSK |= 0x01;
	SREG |= 0x80;
	TCCR0 = 0b00000010;
	//TCCR0 = 0b00001011;//fast PWM
	//OCR0=187;// for 8k sampling
	//OCR0=255;// for 4k sampling
	DIO_u8SetPortDirection(DIO_U8_PORT_D,0xFF);
	DIO_u8SetPortDirection(DIO_U8_PORT_C,0xFF);


while(1){
DIO_u8SetPortValue(DIO_U8_PORT_D,0xff);

}
return 0 ;
}
